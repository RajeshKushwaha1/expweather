<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerlinks}}
</head>

<body>
    {{>navbar}}

    <!-- main header -->

    <div class="container-fluid">
        <div class="row">
            <div class="col-1"></div>
            <div class="col-md-5 col-12 main_header_left">
                <p>Welcome to weather app</p>
                <h1 class="text_cl">Get The Letest <span class="text_clr">Weather</span> Info Of Your City</h1>
                <a href="/weather" class="btn"><button>Check Now</button></a>
            </div>

            <div class="col-md-5 col-12 main_header_right">

                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">

                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="w-100 img-fluid" src="image/bg1.png" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="w-100 img-fluid" src="image/bg2.png" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="w-100 img-fluid" src="image/bg3.png" alt="Third slide">
                        </div>
                    </div>

                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            </div>
            <div class="col-1"></div>
        </div>
    </div>

    <!-- footer code -->
    {{>footer}}


</body>

</html>